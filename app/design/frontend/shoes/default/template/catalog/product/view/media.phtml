 */
?>
<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
?>
<?php if (count($this->getGalleryImages()) > 0): ?>
    <div class="more-views" style="position: relative;">
        <div class="more-views-container" style="width:86px;height:392px;overflow:hidden;position:relative;">
            <ul style="height: 495px; margin-top: 0px; margin-left: 0px; width: 86px;">
                <?php foreach ($this->getGalleryImages() as $_image): ?>
                    <li style="display: list-item;">
                        <a class="" data-fancybox-group="thumb" href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile()) ?>" title="" alt="" id="more_view_item_1">
                            <img
                                src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile()) ?>"
                                width="auto" height="94.11" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>"/>
                        </a>
                    </li>
                <?php endforeach; ?>
            </ul>
        </div>
        <a id="cs_up" href="#" style="position: absolute; z-index: 0; left: 30px; top: -14px;">&nbsp;</a>
        <a id="cs_down" href="#" style="position: absolute; z-index: 0; left: 30px; top: 375px; display: inline;">
            &nbsp;</a>
        <a id="cs_up" href="#" style="position:absolute;z-index:0;">&nbsp;</a>
        <a id="cs_down" href="#" style="position:absolute;z-index:0;">&nbsp;</a>
    </div>
<?php endif; ?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
    <div class="product-image">
        <div id="wrap" style="top: 0px; z-index: 100; position: relative; display: block;">
            <a class="cs-fancybox-thumbs cloud-zoom"> <?php
                $_img = '<img id="image" src="' . $this->helper('catalog/image')->init($_product, 'image') . '" alt="' . $this->escapeHtml($this->getImageLabel()) . '" title="' . $this->escapeHtml($this->getImageLabel()) . '" />';
                echo $_helper->productAttribute($_product, $_img, 'image');
                ?>
            </a>
        </div>
    </div>
    <p class="zoom-notice"
       id="track_hint"><?php echo $this->__('Double click on above image to view full picture') ?></p>
    <div class="zoom">
        <img id="zoom_out" src="<?php echo $this->getSkinUrl('images/slider_btn_zoom_out.gif') ?>"
             alt="<?php echo Mage::helper('core')->quoteEscape($this->__('Zoom Out')) ?>"
             title="<?php echo Mage::helper('core')->quoteEscape($this->__('Zoom Out')) ?>" class="btn-zoom-out"/>
        <div id="track">
            <div id="handle"></div>
        </div>
        <img id="zoom_in" src="<?php echo $this->getSkinUrl('images/slider_btn_zoom_in.gif') ?>"
             alt="<?php echo Mage::helper('core')->quoteEscape($this->__('Zoom In')) ?>"
             title="<?php echo Mage::helper('core')->quoteEscape($this->__('Zoom In')) ?>" class="btn-zoom-in"/>
    </div>
    <script type="text/javascript">
        //<![CDATA[
        Event.observe(window, 'load', function () {
            product_zoom = new Product.Zoom('image', 'track', 'handle', 'zoom_in', 'zoom_out', 'track_hint');
        });
        //]]>
    </script>
<?php else: ?>
    <p class="product-image">
        <?php
        $_img = '<img src="' . $this->helper('catalog/image')->init($_product, 'image')->resize(265) . '" alt="' . $this->escapeHtml($this->getImageLabel()) . '" title="' . $this->escapeHtml($this->getImageLabel()) . '" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
        ?>
    </p>
<?php endif; ?>

